{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "types": [
      "node",
      "jest"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/types/*": ["./src/types/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.d.ts",
    ".next/types/**/*.ts",
    ".next/types/**/*.d.ts",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "lib/**/*.d.ts",
    "scripts/**/*.ts",
    "scripts/**/*.tsx",
    "services/**/*.ts",
    "services/**/*.tsx",
    "services/**/*.d.ts",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx",
    "vitest.config.ts",
    "playwright.config.ts",
    "env.d.ts",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
